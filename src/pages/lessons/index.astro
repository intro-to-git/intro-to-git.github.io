
---
import ArcticleLayout from '../../layouts/ArticleLayout.astro';
import LessonOverview from '../../components/LessonOverview.astro';
import { getLessons } from '../../helpers.astro';

const lessons = await getLessons();
---

<ArcticleLayout title="Lessons">
  <div class="page">
    <h1 class="posts-title">Lessons</h1>
    {lessons.length === 0 ? (
      <p>No lessons yet. Check back soon!</p>
    ) : (
      lessons.map((lesson) => <LessonOverview lesson={lesson} />)
    )}
  </div>
</ArcticleLayout>

